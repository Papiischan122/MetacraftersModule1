pragma solidity ^0.8.0;

contract Llanes {
    uint256 public myNumber;

    function setNumber(uint256 _num) external {
        // Check if the number is zero
        if (_num == 0) {
            revert("Number cannot be zero");
        }

        // Check if the number is too large
        if (_num > 99) {
            revert("Number is too large");
        }

        // Using SafeMath for overflow check
        uint256 newNumber = myNumber + _num;
        if (newNumber < myNumber) {
            revert("Overflow detected");
        }

        myNumber = _num;
    }
}

